<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools" android:id="@+id/navigation"
            app:startDestination="@id/splashFragment">
    <fragment
        android:id="@+id/splashFragment"
        android:name="my.projects.historyaroundkotlin.presentation.view.start.splash.content.SplashFragment"
        android:label="SplashFragment" >
        <action
            android:id="@+id/action_splashFragment_to_permissions_flow"
            app:destination="@id/permissions_flow"
            app:popUpTo="@+id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <navigation android:id="@+id/main_flow"
        app:startDestination="@id/map_flow">
        <navigation android:id="@+id/detail_flow"
            app:startDestination="@id/loadingDetailsFragment">
            <fragment
                android:id="@+id/detailFragment"
                android:name="my.projects.historyaroundkotlin.presentation.view.main.detail.content.DetailFragment"
                android:label="DetailFragment">
                <argument
                    android:name="detailsArgument"
                    app:argType="my.projects.historyaroundkotlin.presentation.argument.ArticleDetailsArgument" />
            </fragment>
            <fragment
                android:id="@+id/loadingDetailsFragment"
                android:name="my.projects.historyaroundkotlin.presentation.view.main.detail.loading.LoadingDetailsFragment"
                android:label="LoadingDetailsFragment" >
                <action
                    android:id="@+id/action_loadingDetailsFragment_to_detail_fragment"
                    app:destination="@id/detailFragment"
                    app:popUpTo="@+id/loadingDetailsFragment"
                    app:popUpToInclusive="true" />
                <action
                    android:id="@+id/action_loadingDetailsFragment_to_errorDetailsFragment"
                    app:destination="@id/errorDetailsFragment" />
                <argument
                    android:name="pageid"
                    app:argType="string" />
            </fragment>
            <fragment
                android:id="@+id/errorDetailsFragment"
                android:name="my.projects.historyaroundkotlin.presentation.view.main.detail.error.ErrorDetailsFragment"
                android:label="ErrorDetailsFragment" />
        </navigation>
        <navigation android:id="@+id/map_flow"
            app:startDestination="@id/loadingLocationFragment">
            <fragment
                android:id="@+id/loadingLocationFragment"
                android:name="my.projects.historyaroundkotlin.presentation.view.main.map.loading.LoadingLocationFragment"
                android:label="LoadingLocationFragment" >
                <action
                    android:id="@+id/action_loadingLocationFragment_to_errorLocationFragment"
                    app:destination="@id/errorLocationFragment" />
                <action
                    android:id="@+id/action_loadingLocationFragment_to_errorLocationServicesFragment"
                    app:destination="@id/errorLocationServicesFragment" />
                <action
                    android:id="@+id/action_loadingLocationFragment_to_loadingArticlesFragment"
                    app:destination="@id/loadingArticlesFragment"
                    app:popUpTo="@+id/loadingLocationFragment"
                    app:popUpToInclusive="true" />
            </fragment>
            <fragment
                android:id="@+id/errorLocationFragment"
                android:name="my.projects.historyaroundkotlin.presentation.view.main.map.error.ErrorLocationFragment"
                android:label="ErrorLocationFragment" />
            <fragment
                android:id="@+id/errorLocationServicesFragment"
                android:name="my.projects.historyaroundkotlin.presentation.view.main.map.error.ErrorLocationServicesFragment"
                android:label="ErrorLocationServicesFragment" />
            <fragment
                android:id="@+id/loadingArticlesFragment"
                android:name="my.projects.historyaroundkotlin.presentation.view.main.map.loading.LoadingArticlesFragment"
                android:label="LoadingArticlesFragment" >
                <action
                    android:id="@+id/action_loadingArticlesFragment_to_errorArticlesFragment"
                    app:destination="@id/errorArticlesFragment" />
                <action
                    android:id="@+id/action_loadingArticlesFragment_to_mapFragment"
                    app:destination="@id/mapFragment"
                    app:popUpTo="@+id/loadingArticlesFragment"
                    app:popUpToInclusive="true" />
                <argument
                    android:name="locationArgument"
                    app:argType="my.projects.historyaroundkotlin.presentation.argument.LocationArgument" />
            </fragment>
            <fragment
                android:id="@+id/errorArticlesFragment"
                android:name="my.projects.historyaroundkotlin.presentation.view.main.map.error.ErrorArticlesFragment"
                android:label="ErrorArticlesFragment" />
            <fragment
                android:id="@+id/mapFragment"
                android:name="my.projects.historyaroundkotlin.presentation.view.main.map.content.MapFragment"
                android:label="MapFragment" >
                <action
                    android:id="@+id/action_mapFragment_to_detail_flow"
                    app:destination="@+id/detail_flow">
                    <argument
                        android:name="pageid"
                        app:argType="string" />
                </action>
                <argument
                    android:name="mapDataArgument"
                    app:argType="my.projects.historyaroundkotlin.presentation.argument.MapDataArgument" />
                <action
                    android:id="@+id/action_mapFragment_to_loadingLocationFragment"
                    app:destination="@id/loadingLocationFragment"
                    app:popUpTo="@+id/mapFragment"
                    app:popUpToInclusive="true" />
                <action
                    android:id="@+id/action_mapFragment_to_preferencesFragment"
                    app:destination="@id/preferencesFragment" />
                <action
                    android:id="@+id/action_mapFragment_to_favorites_flow"
                    app:destination="@id/favorites_flow" />
            </fragment>
            <fragment
                android:id="@+id/preferencesFragment"
                android:name="my.projects.historyaroundkotlin.presentation.view.preferences.PreferencesFragment"
                android:label="PreferencesFragment" >
                <action
                    android:id="@+id/action_preferencesFragment_to_loadingLocationFragment"
                    app:destination="@id/loadingLocationFragment"
                    app:popUpTo="@+id/mapFragment"
                    app:popUpToInclusive="true" />
            </fragment>
        </navigation>
        <navigation android:id="@+id/favorites_flow"
            app:startDestination="@id/loadingFavoritesFragment">
            <fragment
                android:id="@+id/loadingFavoritesFragment"
                android:name="my.projects.historyaroundkotlin.presentation.view.main.favorites.loading.LoadingFavoritesFragment"
                android:label="LoadingFavoritesFragment" >
                <action
                    android:id="@+id/action_loadingFavoritesFragment_to_favouritesFragment"
                    app:destination="@id/favouritesFragment"
                    app:popUpTo="@+id/loadingFavoritesFragment"
                    app:popUpToInclusive="true" />
                <action
                    android:id="@+id/action_loadingFavoritesFragment_to_errorFavoritesFragment"
                    app:destination="@id/errorFavoritesFragment"
                    app:popUpTo="@+id/loadingFavoritesFragment"
                    app:popUpToInclusive="true" />
            </fragment>
            <fragment
                android:id="@+id/errorFavoritesFragment"
                android:name="my.projects.historyaroundkotlin.presentation.view.main.favorites.error.ErrorFavoritesFragment"
                android:label="ErrorFavoritesFragment" >
                <action
                    android:id="@+id/action_errorFavoritesFragment_to_loadingFavoritesFragment"
                    app:destination="@id/loadingFavoritesFragment" />
            </fragment>
            <fragment
                android:id="@+id/favouritesFragment"
                android:name="my.projects.historyaroundkotlin.presentation.view.main.favorites.content.FavoritesFragment"
                android:label="FavouritesFragment" >
                <argument
                    android:name="favoritesArgument"
                    app:argType="my.projects.historyaroundkotlin.presentation.argument.FavoritesArgument" />
                <action
                    android:id="@+id/action_favouritesFragment_to_detail_flow"
                    app:destination="@id/detail_flow">
                    <argument
                        android:name="pageid"
                        app:argType="string" />
                </action>
            </fragment>
        </navigation>
    </navigation>
    <navigation android:id="@+id/permissions_flow"
        app:startDestination="@id/loadingPermissionsFragment">
        <fragment
            android:id="@+id/errorPermissionsFragment"
            android:name="my.projects.historyaroundkotlin.presentation.view.start.permission.error.ErrorPermissionsFragment"
            android:label="ErrorPermissionsFragment" />
        <fragment
            android:id="@+id/loadingPermissionsFragment"
            android:name="my.projects.historyaroundkotlin.presentation.view.start.permission.loading.LoadingPermissionsFragment"
            android:label="LoadingPermissionsFragment">
            <action
                android:id="@+id/action_loadingPermissionsFragment_to_permissionFragment"
                app:destination="@id/permissionFragment"
                app:popUpTo="@+id/loadingPermissionsFragment"
                app:popUpToInclusive="true" />
            <action
                android:id="@+id/action_loadingPermissionsFragment_to_errorPermissionsFragment"
                app:destination="@id/errorPermissionsFragment" />
            <action
                android:id="@+id/action_loadingPermissionsFragment_to_main_flow"
                app:destination="@id/main_flow"
                app:popUpTo="@id/loadingPermissionsFragment"
                app:popUpToInclusive="true" />
        </fragment>
        <fragment
            android:id="@+id/permissionFragment"
            android:name="my.projects.historyaroundkotlin.presentation.view.start.permission.content.PermissionFragment"
            android:label="PermissionFragment">
            <action
                android:id="@+id/action_permissionFragment_to_main_flow"
                app:destination="@+id/main_flow"
                app:popUpTo="@+id/permissionFragment"
                app:popUpToInclusive="true" />
            <argument
                android:name="rationaleListArgument"
                app:argType="my.projects.historyaroundkotlin.presentation.argument.RationaleListArgument" />
        </fragment>
    </navigation>
</navigation>