<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="drawerArrowStyle">@style/Drawer.Toggle</item>
    </style>

    <style name="AppTheme.ActionBar" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="drawerArrowStyle">@style/Drawer.Toggle</item>

        <item name="actionBarTheme">@style/ToolbarStyle</item>
    </style>

    <style name="ToolbarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/textWhite</item>
    </style>

    <style name="Drawer.Toggle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="Drawer.Text.Header" parent="Text.Large.White">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Text.Header" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_size_header</item>
    </style>

    <style name="Text.Large" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="Text.Medium" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="Text.Regular" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_size_regular</item>
    </style>

    <style name="Text.Header.Black" parent="Text.Header">
        <item name="android:textColor">@color/textBlack</item>
    </style>

    <style name="Text.Header.White" parent="Text.Header">
        <item name="android:textColor">@color/textWhite</item>
    </style>

    <style name="Text.Large.Black" parent="Text.Large">
        <item name="android:textColor">@color/textBlack</item>
    </style>

    <style name="Text.Large.White" parent="Text.Large">
        <item name="android:textColor">@color/textWhite</item>
    </style>

    <style name="Text.Regular.Black" parent="Text.Regular">
        <item name="android:textColor">@color/textBlack</item>
    </style>

    <style name="Text.Regular.White" parent="Text.Regular">
        <item name="android:textColor">@color/textWhite</item>
    </style>

    <style name="Text.Medium.Black" parent="Text.Medium">
        <item name="android:textColor">@color/textBlack</item>
    </style>

    <style name="Details.Image.OverlayButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">@dimen/details_image_overlay_button_size</item>
        <item name="android:layout_height">@dimen/details_image_overlay_button_size</item>
        <item name="android:background">@drawable/white_circle_ripple_background</item>
        <item name="android:elevation">4dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="Details.Text.Title" parent="Text.Large.White">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="Details.Text.Title.Black" parent="Text.Large.Black">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="Common.FAB" parent="Widget.Design.FloatingActionButton">
        <item name="fabSize">normal</item>
        <item name="borderWidth">0dp</item>
        <item name="backgroundTint">#FFFFFF</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="Common.FAB.Mini" parent="Common.FAB">
        <item name="fabSize">mini</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="Button.Primary" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/textBlack</item>
    </style>

    <style name="Map.ArticleItem.Title" parent="Text.Regular.White">
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="Favorites.ArticleItem.Extract" parent="Text.Regular">
        <item name="android:maxLines">5</item>
        <item name="android:ellipsize">end</item>
    </style>

</resources>
